    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "src/generated/astralIdentifierCodes.ts",
    "src/generated/astralIdentifierStartCodes.ts",
    "src/generated/nonASCIIidentifierChars.ts",
    "src/generated/nonASCIIidentifierStartChars.ts",
    "src/identifier.ts",
    "src/scopeflags.ts",
    "src/util.ts",
    "src/whitespace.ts"
  ]
}
